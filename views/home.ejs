  <body class="text-center">

    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
      <header class="masthead mb-auto">
        <div class="inner">
          <h3 class="masthead-brand">Campscape</h3>
          <nav class="nav nav-masthead justify-content-center">
            <a class="nav-link active" href="/">Home</a>
            <a class="nav-link" href="/campgrounds">Campgrounds</a>
            <% if(!currentUser) { %>
                <a class="nav-link" href="/login">Login</a>
                <a class="nav-link" href="/register">Register</a>
            <% } else { %>
                <a href="/logout" class="nav-link">Logout</a>
            <% } %>
          </nav>
        </div>
      </header>

      <%- include('partials/flash') %>

      <main role="main" class="inner cover">
        <h1 class="cover-heading">Welcome to Campscape</h1>
        <p class="lead">Welcome to Campscape! <br> Jump right in and explore our many campgrounds. <br>
            Feel free to share some of your own and comment on others!</p>
        <p class="lead">
          <a href="/campgrounds" class="btn btn-lg btn-secondary">View Campgrounds</a>
        </p>
      </main>

      <footer class="mastfoot mt-auto">
        <div class="inner">
            <p>&copy; 2024 Developed by <a href="https://www.github.com/RaidenOM" class="footer-link">Om Kumar</a>. All rights reserved.</p>
            <p>Explore the project on <a href="https://www.github.com/RaidenOM/campscape" class="footer-link">GitHub</a></p>
        </div>
    </footer>
    
      
    </div>


